<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.didi.chameleon.sdk.image">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>
        <activity android:name=".CmlImageActivity" />
        <activity android:name=".CmlCropActivity" />

        <provider
            android:name=".CmlFileProvider"
            android:authorities="com.didi.chameleon.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/cml_file_paths" />
        </provider>
    </application>

</manifest>
